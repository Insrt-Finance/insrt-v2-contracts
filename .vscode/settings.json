{
  "[solidity]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "makefile.extensionOutputFolder": "./cache",
  "prettier.documentSelectors": ["**/*.sol"],
  "search.exclude": { "lib": true },
  "solidity.compileUsingRemoteVersion": "v0.8.20",
  "solidity.formatter": "prettier",
  "solidity.packageDefaultDependenciesContractsDirectory": "src",
  "solidity.packageDefaultDependenciesDirectory": "lib",
  "solidity.remappings": [
    "@solidstate/contracts/=lib/solidstate-solidity/contracts/",
    "@solidstate/layerzero-client/=lib/layerzero-client/contracts/",
    "forge-std/=lib/forge-std/src/",
    "@chainlink/vrf/=lib/chainlink/contracts/src/v0.8/vrf/",
    "@chainlink/interfaces/=lib/chainlink/contracts/src/v0.8/interfaces/",
    "@abdk/=lib/abdk-libraries-solidity/"
  ]
}
